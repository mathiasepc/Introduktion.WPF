<Window x:Class="Introduktion.WPF.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Introduktion.WPF"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock TextAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="10,10,0,10"  FontSize="30"
                   Text="Tap The Button As Fast As You Can"/>

        <TextBlock x:Name ="Tap"  Grid.Column="1" Grid.Row="2" Text="" TextAlignment="Center" 
                   Margin="0,70"/>
        <Button Grid.Column="1" Grid.Row="2" Height="40" Width="40" Margin="0, 0, 0, 100" Click="Button_Click" />

    </Grid>
</Window>
